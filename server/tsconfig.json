{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "lib": [
        "ES2022"
      ],
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "incremental": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "coverage",
      "tests"
    ],
    "ts-node": {
      "transpileOnly": true
    }
  }