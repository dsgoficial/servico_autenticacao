{
  "name": "auth-server",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon",
    "build": "tsc",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "type-check:watch": "tsc -p tsconfig.test.json --noEmit --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "lint-full": "npm run type-check && npm run lint",
    "knip": "knip",
    "create-docs": "node create_documentation.js",
    "dev-https": "nodemon --exec ts-node-esm src/index.ts -- --https",
    "production": "npm run build && pm2 start dist/index.js --name auth-server",
    "production-https": "npm run build && pm2 start dist/index.js --name auth-server-https -- --https",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "bluebird": "^3.7.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "documentation": "^14.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "minimist": "^1.2.8",
    "nocache": "^4.0.0",
    "pg-promise": "^11.10.2",
    "semver": "^7.7.1",
    "serialize-error": "12.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.42",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.13.10",
    "@types/semver": "^7.5.8",
    "@types/serialize-error": "^4.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "knip": "^5.45.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "license": "MIT"
}
