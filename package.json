{
  "name": "auth-server",
  "version": "0.0.1",
  "description": "Serviço de Autenticação",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/1cgeo/auth_server"
  },
  "engines": {
    "node": "~8.7.0",
    "npm": ">=5.4.2"
  },
  "scripts": {
    "dev": "nodemon src/index.js",
    "dev-multicore": "nodemon src/index.js --multicore",
    "dev-https": "nodemon src/index.js --https",
    "dev-https-multicore": "nodemon src/index.js --https --multicore",
    "production": "pm2 start src/index.js -multicore -https --name sap",
    "config": "node create_config.js"
  },
  "nodemonConfig": {
    "ignore": [
      "src/js_docs/*"
    ]
  },
  "keywords": [
    "Autenticação",
    "Node",
    "Express"
  ],
  "author": "DSG/1CGEO <diniz.felipe@eb.mil.br>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/1cgeo/auth_server/issues"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "documentation": "^12.1.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.21.2",
    "hpp": "^0.2.2",
    "inquirer": "^7.0.1",
    "joi": "^14.3.1",
    "jsdoc": "^3.6.3",
    "jsonwebtoken": "^8.5.1",
    "minimist": "^1.2.0",
    "nodemon": "^2.0.2",
    "pg-promise": "^10.3.1",
    "pgtools": "^0.3.0",
    "pm2": "^4.2.1",
    "semver": "^7.1.1",
    "serialize-error": "^5.0.0",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.0",
    "xss-clean": "^0.1.1"
  }
}
